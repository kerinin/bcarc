<h1>Editing page</h1>

<% form_for([:admin, @page]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Update' %>
    or
    <%= link_to 'Delete', admin_page_path(@page), :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>

<%= link_to 'Show', @page %> |
<%= link_to 'Back', admin_pages_path %>
