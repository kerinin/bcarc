<h1>Editing video of project <%=link_to @project.name, edit_admin_project_path(@project) %></h1>

<%= render :partial => 'admin/shared/project_header' %>

<%= form_for([:admin, @project, @video]) do |f| %>
  <%= f.error_messages %>

  <%= link_to image_tag( @video.thumbnail.url(:original) ), @video.uri %>
  
  <%= render :partial => 'admin/shared/languages' %>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :width %>
    <%= f.text_field :width %>

    <%= f.label :height %>
    <%= f.text_field :height %>
  </p>
  <p>
    <%= f.submit 'Update' %>
    or
    <%= link_to 'Delete', admin_project_video_path(@project,@video), :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>

<%= link_to 'Show', project_video_path(@project, @video) %> |
<%= link_to 'Back', admin_project_videos_path(@project) %>
